# Database Configuration
MONGODB_URL=mongodb://localhost:27017/smart_health_db
MONGODB_TEST_URL=mongodb://localhost:27017/smart_health_test_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML API Keys
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Application Settings
APP_NAME=Smart Health Consulting Services
APP_VERSION=1.0.0
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Blockchain Simulation
BLOCKCHAIN_NETWORK=local
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf", "csv"]

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
